<h1><%= @product.name %></h1>
<h3><%= @product.cost %></h3>
<h3><%= @product.country_of_origin %></h3>

<%= button_to "Edit Product", 
              edit_product_path(@product),
              method: :get %>

<%= button_to "Delete Product", 
              product_path(@product),
              method: :delete %> 

<%= button_to "Return to Products Page", 
              products_path,
              method: :get %>