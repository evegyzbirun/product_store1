<h1><%= @product.name %></h1>
<h3><%= @product.cost %></h3>
<h3><%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
  <%# is it right review.name or we use author? %>
        <%= link_to review.author, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews are listed for this product.</p>
<% end %>

<%= button_to "Add Review to Product", 
              new_product_review_path(@product),
              method: :get %>


<%= button_to "Edit Product", 
              edit_product_path(@product),
              method: :get %>

<%= button_to "Delete Product", 
              product_path(@product),
              method: :delete %> 

<%= button_to "Return to Products Page", 
              products_path,
              method: :get %>